#include <stm32f405xx.h>
uint8_t read_Ch;
uint8_t ch;
void USART3_init(void);
void USART3_write(uint8_t);
uint8_t USART3_read(void);
void delayMs(int);
#define size 4
uint16_t  a[size]={11,12,13,14};
int main (void){
	USART3_init();
	while(1)
	{
		for(int i=0;i<4;i++)
		{
			USART3_write(a[i]);
			delayMs(100);
		read_Ch= USART3_read();
		delayMs(100);
		}
	}
}
void USART3_init(void){
	RCC->AHB1ENR |=(1<<2);
	RCC->AHB1ENR |=(1<<18);
	GPIOC->MODER &=~(3<<20);
	GPIOC->MODER |=(1<<21);
	GPIOC->AFR[1]&= ~(0XF<<8);
	GPIOC->AFR[1]|=(7<<8);
	GPIOC->MODER &=~(3<<22);
    GPIOC->MODER |=(1<<23);
	GPIOC->AFR[1]&= ~(0XF<<12);
	GPIOC->AFR[1]|=(7<<12);
    USART3->BRR= 0X0683;
    USART3->CR1 |=(0XC<<0);
    USART3->CR2 = 0;
    USART3->CR3 = 0;
    USART3->CR1 |=(1<<13);
}
void USART3_write(uint8_t ch){
	while(!(USART3->SR & (1<<7))){}
	USART3->DR = (ch & 0xFF);
}
uint8_t USART3_read(void){
	while(!(USART3->SR &(1<<5))){}
	return USART3->DR;
}
void delayMs(int n){
	int i;
	for(;n>0;n--)
		for(i=0;i<2000;i++);
}
